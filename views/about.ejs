<%- include('partials/header.ejs'); -%>
<h1>home</h1>
<p1><%=context%></p1>
 
<% posts.forEach(function(element){ %>
    <% if(element.title.length<=50){%>
    <h1><%=element.title%></h1>
    <%} else{%>
    <h1><%=element.title.substring(0,50)+"..."%></h1>    
    <% }%>
    <%if(element.content.length<50){%>
    <p><%=element.content%></p>
    <%}else{%>
    <p><%=element.content.substring(0,50)+"..."%>
    <a href="/posts/<%=element.title%>">Read More</a></p>
    <%}});%>
<footer class="footer-padding bg-light footer2">   
        <%-include('partials/footer.ejs');-%>
    </footer>